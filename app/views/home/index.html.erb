<% content_for :no_container, true %>
<!-- Hero Section -->
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-indigo-900 transition-colors duration-300">
  <!-- Hero Content -->
  <div class="container mx-auto px-6 py-16">
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-800 dark:text-white mb-6">
        The Future of 
        <span class="text-indigo-600 dark:text-indigo-400">Education</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
        Experience personalized learning with our unique blend of expert human teachers and cutting-edge AI tutors. 
        At Scuti Private School, we prepare students for tomorrow's world today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <% if user_signed_in? %>
          <%= link_to "Dashboard", "#dashboard", class: "bg-indigo-600 dark:bg-indigo-500 text-white px-8 py-4 rounded-lg font-semibold hover:bg-indigo-700 dark:hover:bg-indigo-600 transition-colors" %>
        <% else %>
          <%= link_to "Get Started", new_user_registration_path, class: "bg-indigo-600 dark:bg-indigo-500 text-white px-8 py-4 rounded-lg font-semibold hover:bg-indigo-700 dark:hover:bg-indigo-600 transition-colors" %>
        <% end %>
        <button class="border-2 border-indigo-600 dark:border-indigo-400 text-indigo-600 dark:text-indigo-400 px-8 py-4 rounded-lg font-semibold hover:bg-indigo-50 dark:hover:bg-indigo-900/20 transition-colors" onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth'})">
          Learn More
        </button>
      </div>
    </div>
    <!-- Features Grid -->
    <div id="features" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <!-- Human Teachers -->
      <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 transition-colors duration-300">
        <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Expert Human Teachers</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Our certified educators bring years of experience and passion to every classroom, 
          providing mentorship and emotional support that only humans can offer.
        </p>
      </div>
      <!-- AI Teachers -->
      <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 transition-colors duration-300">
        <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">AI Learning Assistants</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Advanced AI tutors provide 24/7 personalized support, adaptive learning paths, 
          and instant feedback to accelerate each student's unique learning journey.
        </p>
      </div>
      <!-- Personalized Learning -->
      <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 transition-colors duration-300">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Personalized Curriculum</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Every student receives a tailored educational experience that adapts to their 
          learning style, pace, and interests for optimal academic growth.
        </p>
      </div>
    </div>
    <!-- About Section -->
    <div id="about" class="bg-white dark:bg-gray-800 rounded-3xl p-12 shadow-sm border border-gray-100 dark:border-gray-700 transition-colors duration-300">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h3 class="text-4xl font-bold text-gray-800 dark:text-white mb-6">Why Choose Scuti?</h3>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
            We're pioneering the next generation of education by seamlessly combining the best of human 
            wisdom with artificial intelligence capabilities. Our students don't just learn factsâ€”they 
            develop critical thinking, creativity, and problem-solving skills for the 21st century.
          </p>
          <ul class="space-y-4">
            <li class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-indigo-600 dark:bg-indigo-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300">Small class sizes for individual attention</span>
            </li>
            <li class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-indigo-600 dark:bg-indigo-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300">State-of-the-art technology integration</span>
            </li>
            <li class="flex items-center space-x-3">
              <div class="w-6 h-6 bg-indigo-600 dark:bg-indigo-500 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300">Proven track record of academic excellence</span>
            </li>
          </ul>
        </div>
        <div class="bg-gradient-to-br from-indigo-500 to-purple-600 dark:from-indigo-600 dark:to-purple-700 rounded-2xl p-8 text-white">
          <h4 class="text-2xl font-bold mb-4">Join Our Community</h4>
          <p class="mb-6">
            Discover how the perfect blend of human expertise and AI innovation can 
            transform your child's educational journey.
          </p>
          <% if user_signed_in? %>
            <%= link_to "View Dashboard", "#dashboard", class: "bg-white text-indigo-600 dark:text-indigo-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors" %>
          <% else %>
            <%= link_to "Get Started", new_user_registration_path, class: "bg-white text-indigo-600 dark:text-indigo-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors" %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Contact Section -->
    <div id="contact" class="text-center mt-16">
      <h3 class="text-3xl font-bold text-gray-800 dark:text-white mb-4">Ready to Get Started?</h3>
      <p class="text-gray-600 dark:text-gray-300 mb-8">Contact us today to learn more about enrollment opportunities.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+1234567890" class="bg-gray-800 dark:bg-gray-700 text-white px-8 py-4 rounded-lg font-semibold hover:bg-gray-700 dark:hover:bg-gray-600 transition-colors">
          Call Us: (123) 456-7890
        </a>
        <a href="mailto:info@scuti.edu" class="border-2 border-gray-800 dark:border-gray-600 text-gray-800 dark:text-gray-300 px-8 py-4 rounded-lg font-semibold hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors">
          Email: info@scuti.edu
        </a>
      </div>
    </div>
  </div>
</div>
