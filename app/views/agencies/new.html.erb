<% content_for :title, "Apply for Agency Partnership" %>
<div class="max-w-4xl mx-auto px-6 py-8">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
        Apply for Agency Partnership
      </h1>
      <p class="text-gray-600 dark:text-gray-300">
        Join our network of educational agencies and provide cutting-edge AI-powered education to your students.
      </p>
    </div>
    <%= form_with model: @agency, local: true, class: "space-y-6" do |form| %>
      <% if @agency.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                There were errors with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                <ul class="list-disc pl-5 space-y-1">
                  <% @agency.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, "Agency Name", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_field :name, class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white", placeholder: "Enter your agency name" %>
        </div>
        <div>
          <%= form.label :email, "Contact Email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.email_field :email, class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white", placeholder: "agency@example.com" %>
        </div>
      </div>
      <div>
        <%= form.label :phone, "Phone Number", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.telephone_field :phone, class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white", placeholder: "+1 (555) 123-4567" %>
      </div>
      <div>
        <%= form.label :address, "Address", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.text_area :address, rows: 3, class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white", placeholder: "Enter your agency address" %>
      </div>
      <div>
        <%= form.label :description, "About Your Agency", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-white", placeholder: "Tell us about your agency, your mission, and how you plan to use our platform..." %>
      </div>
      <div class="flex items-center justify-between pt-6">
        <%= link_to "Cancel", root_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 font-medium" %>
        <%= form.submit "Submit Application", class: "bg-indigo-600 dark:bg-indigo-500 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 dark:hover:bg-indigo-600 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
