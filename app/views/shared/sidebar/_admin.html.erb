<!-- Admin Menu -->
<%= link_to root_path, class: "flex items-center space-x-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors #{'bg-gray-100 dark:bg-gray-700' if current_page?(root_path)}" do %>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v2H8V5z"></path>
  </svg>
  <span>Admin Dashboard</span>
<% end %>
<!-- Classroom Management Section -->
<div class="mt-6 mb-3">
  <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">Classroom Management</h3>
</div>
<%= link_to class_rooms_path, class: "flex items-center space-x-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors #{'bg-gray-100 dark:bg-gray-700' if current_page?(class_rooms_path)}" do %>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
  </svg>
  <span>All Classrooms</span>
  <% total_classrooms = ClassRoom.count %>
  <% if total_classrooms > 0 %>
    <span class="ml-auto bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs px-2 py-1 rounded-full">
      <%= total_classrooms %>
    </span>
  <% end %>
<% end %>
<!-- Recent Activity -->
<% recent_classrooms = ClassRoom.order(created_at: :desc).limit(3) %>
<% if recent_classrooms.any? %>
  <div class="ml-3 mt-2 space-y-1">
    <p class="text-xs text-gray-500 dark:text-gray-400 px-3 py-1">Recent Classrooms</p>
    <% recent_classrooms.each do |classroom| %>
      <%= link_to classroom, class: "flex items-center justify-between space-x-2 px-3 py-1 text-sm text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-md transition-colors" do %>
        <div class="flex items-center space-x-2 min-w-0 flex-1">
          <div class="w-2 h-2 <%= classroom.status == 'open' ? 'bg-green-500' : 'bg-red-500' %> rounded-full flex-shrink-0"></div>
          <span class="truncate"><%= classroom.name %></span>
        </div>
        <span class="text-xs text-gray-400 flex-shrink-0">
          <%= classroom.students.count %>
        </span>
      <% end %>
    <% end %>
  </div>
<% end %>
<!-- System Management Section -->
<div class="mt-6 mb-3">
  <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">System Management</h3>
</div>
<%= link_to "#", class: "flex items-center space-x-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" do %>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
  </svg>
  <span>User Management</span>
  <% total_users = User.count %>
  <% if total_users > 0 %>
    <span class="ml-auto bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs px-2 py-1 rounded-full">
      <%= total_users %>
    </span>
  <% end %>
<% end %>
<%= link_to "#", class: "flex items-center space-x-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" do %>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 00-2-2z"></path>
  </svg>
  <span>Analytics & Reports</span>
<% end %>
<%= link_to "#", class: "flex items-center space-x-3 px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" do %>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
  </svg>
  <span>System Settings</span>
<% end %>
<!-- System Overview -->
<% pending_approvals_count = ClassRoomStudent.pending_approval.count %>
<% open_classrooms = ClassRoom.open_classes.count %>
<% total_students = User.where(role: :student).count %>
<% total_teachers = User.where(role: :teacher).count %>
<% if pending_approvals_count > 0 %>
  <div class="ml-3 mt-2">
    <div class="flex items-center space-x-2 px-3 py-1 text-xs text-yellow-600 dark:text-yellow-400 bg-yellow-50 dark:bg-yellow-900/20 rounded-md">
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
      <span>Approvals needed: <%= pending_approvals_count %></span>
    </div>
  </div>
<% end %>
<!-- Quick Stats -->
<div class="ml-3 mt-3 space-y-2">
  <div class="grid grid-cols-2 gap-2 text-xs">
    <div class="bg-green-50 dark:bg-green-900/20 px-2 py-1 rounded-md">
      <div class="text-green-600 dark:text-green-400 font-medium"><%= open_classrooms %></div>
      <div class="text-green-500 dark:text-green-500">Open Classes</div>
    </div>
    <div class="bg-blue-50 dark:bg-blue-900/20 px-2 py-1 rounded-md">
      <div class="text-blue-600 dark:text-blue-400 font-medium"><%= total_students %></div>
      <div class="text-blue-500 dark:text-blue-500">Students</div>
    </div>
  </div>
  <div class="bg-purple-50 dark:bg-purple-900/20 px-2 py-1 rounded-md">
    <div class="text-purple-600 dark:text-purple-400 font-medium"><%= total_teachers %></div>
    <div class="text-purple-500 dark:text-purple-500">Teachers</div>
  </div>
</div>
