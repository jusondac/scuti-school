<div class="container mx-auto px-6 py-8">
  <!-- Header Section -->
  <div class="bg-white dark:bg-gray-800 p-6 mb-6">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-light text-gray-800 dark:text-white">
        <%= case current_user.role
            when 'admin'
              'All Classrooms'
            when 'teacher'
              'My Classrooms'
            when 'student'
              'Available Classrooms'
            end %>
      </h1>
      <% if current_user.can_create_class? %>
        <%= link_to 'Create New Classroom', new_class_room_path, 
            class: 'bg-blue-500 hover:bg-blue-600 text-white font-normal py-3 px-6 text-sm uppercase tracking-wide transition-colors' %>
      <% end %>
    </div>
  </div>
  <% if @class_rooms.any? %>
    <!-- Table Section -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Classroom</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Subject</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Teacher</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Students</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Visibility</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @class_rooms.each do |class_room| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
              <td class="px-6 py-4">
                <div>
                  <div class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= class_room.name %>
                  </div>
                  <% if class_room.description.present? %>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      <%= truncate(class_room.description, length: 60) %>
                    </div>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                <%= class_room.subject %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                <%= class_room.teacher.email %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
                <%= class_room.approved_students.count %>/<%= class_room.quota %>
              </td>
              <td class="px-6 py-4">
                <span class="inline-flex px-3 py-1 text-xs font-medium
                           <%= class_room.status == 'open' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400' %>">
                  <%= class_room.status.upcase %>
                </span>
              </td>
              <td class="px-6 py-4">
                <span class="inline-flex px-3 py-1 text-xs font-medium
                           <%= class_room.visible_to_all? ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400' : 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400' %>">
                  <%= class_room.visible_to_all? ? 'PUBLIC' : 'PRIVATE' %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm font-medium">
                <div class="flex space-x-3">
                  <%= link_to 'View', class_room, 
                      class: 'text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-normal transition-colors' %>
                  <% if current_user.student? && class_room.can_join?(current_user) %>
                    <%= button_to 'Join', join_class_room_path(class_room), method: :post,
                        class: 'bg-green-500 hover:bg-green-600 text-white py-1 px-3 text-xs uppercase tracking-wide transition-colors' %>
                  <% elsif current_user.student? %>
                    <% case class_room.join_status_for(current_user)
                       when 'full' %>
                      <span class="text-red-500 dark:text-red-400 text-xs font-medium uppercase">Full</span>
                    <% when 'already_joined' %>
                      <span class="text-green-500 dark:text-green-400 text-xs font-medium uppercase">Joined</span>
                    <% when 'pending' %>
                      <span class="text-yellow-500 dark:text-yellow-400 text-xs font-medium uppercase">Pending</span>
                    <% when 'closed' %>
                      <span class="text-gray-500 dark:text-gray-400 text-xs font-medium uppercase">Closed</span>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white dark:bg-gray-800 p-12 text-center">
      <div class="mx-auto w-16 h-16 bg-gray-100 dark:bg-gray-700 flex items-center justify-center mb-6">
        <svg class="w-8 h-8 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <h3 class="text-lg font-light text-gray-900 dark:text-white mb-3">No classrooms found</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">
        <%= case current_user.role
            when 'admin'
              'No classrooms have been created yet.'
            when 'teacher'
              'You haven\'t created any classrooms yet.'
            when 'student'
              'No classrooms are available at the moment.'
            end %>
      </p>
      <% if current_user.can_create_class? %>
        <%= link_to 'Create Your First Classroom', new_class_room_path,
            class: 'bg-blue-500 hover:bg-blue-600 text-white font-normal py-3 px-6 text-sm uppercase tracking-wide transition-colors' %>
      <% end %>
    </div>
  <% end %>
</div>
