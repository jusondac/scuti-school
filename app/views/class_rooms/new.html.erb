<div class="container mx-auto px-6 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="bg-white dark:bg-gray-800 p-6 mb-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-blue-500 flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-light text-gray-800 dark:text-white">Create New Classroom</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Set up a new learning environment for your students
          </p>
        </div>
      </div>
    </div>
    <!-- Form Section -->
    <div class="bg-white dark:bg-gray-800">
      <%= form_with model: @class_room, local: true, class: "p-8" do |form| %>
        <!-- Error Messages -->
        <% if @class_room.errors.any? %>
          <div class="bg-red-100 dark:bg-red-900/30 border-l-4 border-red-500 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                  Please fix the following <%= pluralize(@class_room.errors.count, "error") %>:
                </h3>
                <ul class="mt-2 text-sm text-red-700 dark:text-red-300">
                  <% @class_room.errors.full_messages.each do |message| %>
                    <li>â€¢ <%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Left Column -->
          <div class="space-y-6">
            <!-- Classroom Name -->
            <div>
              <%= form.label :name, "CLASSROOM NAME", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.text_field :name, 
                  placeholder: "e.g., Advanced Mathematics", 
                  class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors" %>
            </div>
            <!-- Subject -->
            <div>
              <%= form.label :subject, "SUBJECT", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.text_field :subject, 
                  placeholder: "e.g., Mathematics, Science, Literature", 
                  class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors" %>
            </div>
            <!-- Quota -->
            <div>
              <%= form.label :quota, "STUDENT CAPACITY", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.number_field :quota, 
                  value: 30, min: 1, max: 100, 
                  class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors" %>
              <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Maximum number of students (1-100)</p>
            </div>
          </div>
          <!-- Right Column -->
          <div class="space-y-6">
            <!-- Visibility -->
            <div>
              <%= form.label :visibility, "VISIBILITY", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.select :visibility, 
                  options_for_select([
                    ['Public - Anyone can join', 'visible_to_all'],
                    ['Private - Requires approval', 'invite_only']
                  ], 'visible_to_all'), 
                  {}, 
                  { class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors appearance-none" } %>
            </div>
            <!-- Status -->
            <div>
              <%= form.label :status, "STATUS", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.select :status, 
                  options_for_select([
                    ['Open - Students can join', 'open'],
                    ['Closed - No new students', 'closed']
                  ], 'open'), 
                  {}, 
                  { class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors appearance-none" } %>
            </div>
          </div>
        </div>
        <!-- Description (Full Width) -->
        <div class="mt-6">
          <%= form.label :description, "DESCRIPTION (OPTIONAL)", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
          <%= form.text_area :description, 
              rows: 4, 
              placeholder: "Describe what students will learn in this classroom...", 
              class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors resize-none" %>
        </div>
        <!-- Action Buttons -->
        <div class="flex space-x-4 mt-8">
          <%= link_to 'CANCEL', class_rooms_path, 
              class: "flex-1 px-6 py-3 bg-gray-200 dark:bg-gray-600 hover:bg-gray-300 dark:hover:bg-gray-500 text-gray-800 dark:text-gray-200 font-medium text-center text-sm uppercase tracking-wide transition-colors" %>
          <%= form.submit "CREATE CLASSROOM", 
              class: "flex-1 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-medium text-sm uppercase tracking-wide transition-colors cursor-pointer border-0" %>
        </div>
      <% end %>
    </div>
    <!-- Back Link -->
    <div class="text-center mt-6">
      <%= link_to class_rooms_path, 
          class: "inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        BACK TO CLASSROOMS
      <% end %>
    </div>
  </div>
</div>
