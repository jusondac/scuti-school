<div class="container mx-auto px-4 py-8">
  <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm">
    <div class="p-6">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @class_room.name %></h1>
          <p class="text-lg text-gray-600 dark:text-gray-300 mt-1"><%= @class_room.subject %></p>
        </div>
        <div class="flex space-x-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= @class_room.status == 'open' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400' %>">
            <%= @class_room.status.capitalize %>
          </span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= @class_room.visible_to_all? ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400' : 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400' %>">
            <%= @class_room.visible_to_all? ? 'Public' : 'Private' %>
          </span>
        </div>
      </div>
      <% if @class_room.description.present? %>
        <div class="mb-6">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Description</h3>
          <p class="text-gray-700 dark:text-gray-300"><%= simple_format(@class_room.description) %></p>
        </div>
      <% end %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
          <h4 class="text-sm font-medium text-gray-900 dark:text-gray-200">Teacher</h4>
          <p class="text-lg text-gray-700 dark:text-gray-300"><%= @class_room.teacher.email %></p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
          <h4 class="text-sm font-medium text-gray-900 dark:text-gray-200">Students</h4>
          <p class="text-lg text-gray-700 dark:text-gray-300">
            <%= @class_room.approved_students.count %> / <%= @class_room.quota %>
          </p>
          <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2 mt-2">
            <div class="bg-blue-600 dark:bg-blue-500 h-2 rounded-full" 
                 style="width: <%= (@class_room.approved_students.count.to_f / @class_room.quota * 100).round(1) %>%"></div>
          </div>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
          <h4 class="text-sm font-medium text-gray-900 dark:text-gray-200">Created</h4>
          <p class="text-lg text-gray-700 dark:text-gray-300"><%= @class_room.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
      <!-- Student Actions -->
      <% if current_user.student? %>
        <div class="mb-6">
          <% case @join_status
             when 'can_join' %>
            <%= link_to 'Join Classroom', join_class_room_path(@class_room), method: :post,
                class: 'bg-green-600 hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600 text-white font-medium py-2.5 px-4 rounded-lg transition-colors',
                data: { confirm: @class_room.invite_only? ? 'Are you sure? You will need teacher approval to join this private classroom.' : 'Are you sure you want to join this classroom?' } %>
          <% when 'pending' %>
            <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
              <p class="text-yellow-800 dark:text-yellow-200">Your join request is pending approval from the teacher.</p>
            </div>
          <% when 'already_joined' %>
            <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
              <p class="text-green-800 dark:text-green-200">You are already a member of this classroom.</p>
            </div>
          <% when 'full' %>
            <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
              <p class="text-red-800 dark:text-red-200">This classroom is full and cannot accept new students.</p>
            </div>
          <% when 'closed' %>
            <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-4">
              <p class="text-gray-800 dark:text-gray-200">This classroom is closed and not accepting new students.</p>
            </div>
          <% end %>
        </div>
      <% end %>
      <!-- Teacher/Admin Actions -->
      <% if current_user.can_approve_students?(@class_room) %>
        <div class="mb-6">
          <div class="flex space-x-4">
            <%= link_to 'Edit Classroom', edit_class_room_path(@class_room),
                class: 'bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-medium py-2.5 px-4 rounded-lg transition-colors' %>
            <%= link_to 'Delete Classroom', @class_room, method: :delete,
                class: 'bg-red-600 hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600 text-white font-medium py-2.5 px-4 rounded-lg transition-colors',
                data: { confirm: 'Are you sure? This will permanently delete the classroom and remove all students.' } %>
          </div>
        </div>
      <% end %>
      <!-- Students List -->
      <% if can_view_students? %>
        <div class="space-y-6">
          <!-- Pending Students (for teachers/admin) -->
          <% if can_manage_students? && @pending_students.any? %>
            <div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Pending Approval (<%= @pending_students.count %>)</h3>
              <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg overflow-hidden">
                <ul class="divide-y divide-yellow-200 dark:divide-yellow-800">
                  <% @pending_students.each do |student| %>
                    <li class="px-4 py-3 flex justify-between items-center">
                      <div>
                        <p class="text-sm font-medium text-gray-900 dark:text-white"><%= student.email %></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                          Requested: <%= @class_room.class_room_students.find_by(user: student).requested_at&.strftime("%B %d, %Y at %I:%M %p") %>
                        </p>
                      </div>
                      <div class="flex space-x-2">
                        <%= link_to 'Approve', approve_student_class_room_path(@class_room, user_id: student.id), method: :post,
                            class: 'bg-green-600 hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600 text-white font-medium py-1.5 px-3 rounded-md text-sm transition-colors' %>
                        <%= link_to 'Reject', reject_student_class_room_path(@class_room, user_id: student.id), method: :post,
                            class: 'bg-red-600 hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600 text-white font-medium py-1.5 px-3 rounded-md text-sm transition-colors' %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
          <!-- Approved Students -->
          <% if @approved_students.any? %>
            <div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Students (<%= @approved_students.count %>)</h3>
              <div class="bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg overflow-hidden">
                <ul class="divide-y divide-gray-200 dark:divide-gray-600">
                  <% @approved_students.each do |student| %>
                    <li class="px-4 py-3 flex justify-between items-center">
                      <div>
                        <p class="text-sm font-medium text-gray-900 dark:text-white"><%= student.email %></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                          Joined: <%= @class_room.class_room_students.find_by(user: student).approved_at&.strftime("%B %d, %Y") %>
                        </p>
                      </div>
                      <% if can_manage_students? %>
                        <%= link_to 'Remove', reject_student_class_room_path(@class_room, user_id: student.id), method: :post,
                            class: 'bg-red-600 hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600 text-white font-medium py-1.5 px-3 rounded-md text-sm transition-colors',
                            data: { confirm: 'Are you sure you want to remove this student from the classroom?' } %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="mx-auto w-16 h-16 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
              <p class="text-gray-500 dark:text-gray-400">No students have joined this classroom yet.</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-6">
    <%= link_to 'Back to Classrooms', class_rooms_path,
        class: 'text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors' %>
  </div>
</div>
