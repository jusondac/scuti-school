<div class="container mx-auto px-6 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header Section -->
    <div class="bg-white dark:bg-gray-800 p-6 mb-6">
      <div class="flex justify-between items-start">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-blue-500 flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-light text-gray-800 dark:text-white"><%= @class_room.name %></h1>
            <p class="text-sm text-gray-600 dark:text-gray-400"><%= @class_room.subject %></p>
          </div>
        </div>
        <div class="flex space-x-2">
          <span class="inline-flex px-3 py-1 text-xs font-medium uppercase tracking-wide
            <%= @class_room.status == 'open' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400' %>">
            <%= @class_room.status %>
          </span>
          <span class="inline-flex px-3 py-1 text-xs font-medium uppercase tracking-wide
            <%= @class_room.visible_to_all? ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400' : 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400' %>">
            <%= @class_room.visible_to_all? ? 'PUBLIC' : 'PRIVATE' %>
          </span>
        </div>
      </div>
    </div>
    <!-- Description Section -->
    <% if @class_room.description.present? %>
      <div class="bg-white dark:bg-gray-800 p-6 mb-6">
        <h3 class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">DESCRIPTION</h3>
        <p class="text-gray-700 dark:text-gray-300 leading-relaxed"><%= simple_format(@class_room.description) %></p>
      </div>
    <% end %>
    <!-- Statistics Section -->
    <div class="bg-white dark:bg-gray-800 mb-6">
      <table class="w-full">
        <thead>
          <tr class="bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Teacher</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Enrollment</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Created</th>
            <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Capacity</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
              <%= @class_room.teacher.email %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
              <%= @class_room.approved_students.count %> / <%= @class_room.quota %> students
              <div class="w-full bg-gray-200 dark:bg-gray-600 h-2 mt-1">
                <div class="bg-blue-500 h-2" style="width: <%= (@class_room.approved_students.count.to_f / @class_room.quota * 100).round(1) %>%"></div>
              </div>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
              <%= @class_room.created_at.strftime("%B %d, %Y") %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-300">
              <%= @class_room.quota %> students
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- Student Actions -->
    <% if current_user.student? %>
      <div class="bg-white dark:bg-gray-800 p-6 mb-6">
        <% case @join_status
           when 'can_join' %>
          <%= link_to 'JOIN CLASSROOM', join_class_room_path(@class_room), method: :post,
              class: 'bg-green-500 hover:bg-green-600 text-white font-medium py-3 px-6 text-sm uppercase tracking-wide transition-colors',
              data: { confirm: @class_room.invite_only? ? 'Are you sure? You will need teacher approval to join this private classroom.' : 'Are you sure you want to join this classroom?' } %>
        <% when 'pending' %>
          <div class="bg-yellow-100 dark:bg-yellow-900/30 border-l-4 border-yellow-500 p-4">
            <p class="text-yellow-800 dark:text-yellow-200 font-medium uppercase text-sm tracking-wide">Your join request is pending approval</p>
          </div>
        <% when 'already_joined' %>
          <div class="bg-green-100 dark:bg-green-900/30 border-l-4 border-green-500 p-4">
            <p class="text-green-800 dark:text-green-200 font-medium uppercase text-sm tracking-wide">You are a member of this classroom</p>
          </div>
        <% when 'full' %>
          <div class="bg-red-100 dark:bg-red-900/30 border-l-4 border-red-500 p-4">
            <p class="text-red-800 dark:text-red-200 font-medium uppercase text-sm tracking-wide">This classroom is full</p>
          </div>
        <% when 'closed' %>
          <div class="bg-gray-100 dark:bg-gray-700 border-l-4 border-gray-500 p-4">
            <p class="text-gray-800 dark:text-gray-200 font-medium uppercase text-sm tracking-wide">This classroom is closed</p>
          </div>
        <% end %>
      </div>
    <% end %>
    <!-- Teacher/Admin Actions -->
    <% if current_user.can_approve_students?(@class_room) %>
      <div class="bg-white dark:bg-gray-800 p-6 mb-6">
        <div class="flex space-x-4">
          <%= link_to 'EDIT CLASSROOM', edit_class_room_path(@class_room),
              class: 'bg-blue-500 hover:bg-blue-600 text-white font-medium py-3 px-6 text-sm uppercase tracking-wide transition-colors' %>
          <%= link_to 'DELETE CLASSROOM', @class_room, method: :delete,
              class: 'bg-red-500 hover:bg-red-600 text-white font-medium py-3 px-6 text-sm uppercase tracking-wide transition-colors',
              data: { confirm: 'Are you sure? This will permanently delete the classroom and remove all students.' } %>
        </div>
      </div>
    <% end %>
    <!-- Students Management -->
    <% if can_view_students? %>
      <div class="space-y-6">
        <!-- Pending Students (for teachers/admin) -->
        <% if can_manage_students? && @pending_students.any? %>
          <div class="bg-white dark:bg-gray-800">
            <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
              <h3 class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Pending Approval (<%= @pending_students.count %>)
              </h3>
            </div>
            <div class="divide-y divide-gray-200 dark:divide-gray-700">
              <% @pending_students.each do |student| %>
                <div class="px-6 py-4 flex justify-between items-center">
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white"><%= student.email %></p>
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                      Requested: <%= @class_room.class_room_students.find_by(user: student).requested_at&.strftime("%B %d, %Y") %>
                    </p>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to 'APPROVE', approve_student_class_room_path(@class_room, user_id: student.id), method: :post,
                        class: 'bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 text-xs uppercase tracking-wide transition-colors' %>
                    <%= link_to 'REJECT', reject_student_class_room_path(@class_room, user_id: student.id), method: :post,
                        class: 'bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 text-xs uppercase tracking-wide transition-colors' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <!-- Approved Students -->
        <% if @approved_students.any? %>
          <div class="bg-white dark:bg-gray-800">
            <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
              <h3 class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                Students (<%= @approved_students.count %>)
              </h3>
            </div>
            <div class="divide-y divide-gray-200 dark:divide-gray-700">
              <% @approved_students.each do |student| %>
                <div class="px-6 py-4 flex justify-between items-center">
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white"><%= student.email %></p>
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                      Joined: <%= @class_room.class_room_students.find_by(user: student).approved_at&.strftime("%B %d, %Y") %>
                    </p>
                  </div>
                  <% if can_manage_students? %>
                    <%= link_to 'REMOVE', reject_student_class_room_path(@class_room, user_id: student.id), method: :post,
                        class: 'bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 text-xs uppercase tracking-wide transition-colors',
                        data: { confirm: 'Are you sure you want to remove this student from the classroom?' } %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-white dark:bg-gray-800 p-12 text-center">
            <div class="mx-auto w-16 h-16 bg-gray-100 dark:bg-gray-700 flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <p class="text-gray-500 dark:text-gray-400 uppercase text-sm tracking-wide">No students have joined this classroom yet</p>
          </div>
        <% end %>
      </div>
    <% end %>
    <!-- Back Link -->
    <div class="text-center mt-8">
      <%= link_to class_rooms_path,
          class: 'inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors' do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        BACK TO CLASSROOMS
      <% end %>
    </div>
  </div>
</div>
<script>
  function copyClassroomUrl() {
    const urlInput = document.getElementById('classroom-url');
    const copyButton = event.target;

    // Select and copy the text
    urlInput.select();
    urlInput.setSelectionRange(0, 99999); // For mobile devices

    navigator.clipboard.writeText(urlInput.value).then(function() {
      // Success feedback
      const originalText = copyButton.textContent;
      copyButton.textContent = 'Copied!';
      copyButton.classList.remove('bg-gray-500', 'hover:bg-gray-600', 'dark:bg-gray-600', 'dark:hover:bg-gray-700');
      copyButton.classList.add('bg-green-500', 'hover:bg-green-600', 'dark:bg-green-600', 'dark:hover:bg-green-700');

      // Reset after 2 seconds
      setTimeout(function() {
        copyButton.textContent = originalText;
        copyButton.classList.remove('bg-green-500', 'hover:bg-green-600', 'dark:bg-green-600', 'dark:hover:bg-green-700');
        copyButton.classList.add('bg-gray-500', 'hover:bg-gray-600', 'dark:bg-gray-600', 'dark:hover:bg-gray-700');
      }, 2000);
    }).catch(function(err) {
      // Fallback for older browsers
      try {
        document.execCommand('copy');
        copyButton.textContent = 'Copied!';
        setTimeout(function() {
          copyButton.textContent = 'Copy Link';
        }, 2000);
      } catch (err) {
        console.error('Could not copy text: ', err);
      }
    });
  }
</script>
