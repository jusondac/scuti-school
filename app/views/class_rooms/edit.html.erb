<div class="container mx-auto px-6 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="bg-white dark:bg-gray-800 p-6 mb-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-indigo-500 flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-light text-gray-800 dark:text-white">Edit Classroom</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Update your classroom settings and enrollment options
          </p>
        </div>
      </div>
    </div>
    <!-- Form Section -->
    <div class="bg-white dark:bg-gray-800">
      <%= form_with model: @class_room, local: true, class: "p-8" do |form| %>
        <!-- Error Messages -->
        <% if @class_room.errors.any? %>
          <div class="bg-red-100 dark:bg-red-900/30 border-l-4 border-red-500 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                  Please fix the following <%= pluralize(@class_room.errors.count, "error") %>:
                </h3>
                <ul class="mt-2 text-sm text-red-700 dark:text-red-300">
                  <% @class_room.errors.full_messages.each do |message| %>
                    <li>• <%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Current Info -->
        <div class="bg-blue-100 dark:bg-blue-900/30 border-l-4 border-blue-500 p-4 mb-6">
          <div class="flex">
            <svg class="w-5 h-5 text-blue-500 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="text-sm text-blue-800 dark:text-blue-200">
              <span class="font-medium">Currently enrolled:</span>
              <%= @class_room.approved_students.count %> out of <%= @class_room.quota %> students
              <% if @class_room.pending_students.any? %>
                • <span class="font-medium"><%= @class_room.pending_students.count %></span> pending approval
              <% end %>
            </div>
          </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Left Column -->
          <div class="space-y-6">
            <!-- Classroom Name -->
            <div>
              <%= form.label :name, "CLASSROOM NAME", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.text_field :name, 
                  class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors" %>
            </div>
            <!-- Subject -->
            <div>
              <%= form.label :subject, "SUBJECT", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.text_field :subject, 
                  class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors" %>
            </div>
            <!-- Quota -->
            <div>
              <%= form.label :quota, "STUDENT CAPACITY", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.number_field :quota, 
                  min: 1, max: 100, 
                  class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors" %>
              <% if @class_room.approved_students.count > 0 %>
                <div class="mt-1 text-xs text-orange-600 dark:text-orange-400">
                  <%= @class_room.approved_students.count %> students currently enrolled. 
                  Setting quota below this may cause issues.
                </div>
              <% else %>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Maximum number of students (1-100)</p>
              <% end %>
            </div>
          </div>
          <!-- Right Column -->
          <div class="space-y-6">
            <!-- Visibility -->
            <div>
              <%= form.label :visibility, "VISIBILITY", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.select :visibility, 
                  options_for_select([
                    ['Public - Anyone can join', 'visible_to_all'],
                    ['Private - Requires approval', 'invite_only']
                  ], @class_room.visibility), 
                  {}, 
                  { class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors appearance-none" } %>
            </div>
            <!-- Status -->
            <div>
              <%= form.label :status, "STATUS", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
              <%= form.select :status, 
                  options_for_select([
                    ['Open - Students can join', 'open'],
                    ['Closed - No new students', 'closed']
                  ], @class_room.status), 
                  {}, 
                  { class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors appearance-none" } %>
            </div>
          </div>
        </div>
        <!-- Description (Full Width) -->
        <div class="mt-6">
          <%= form.label :description, "DESCRIPTION (OPTIONAL)", class: "block text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-2" %>
          <%= form.text_area :description, 
              rows: 4, 
              placeholder: "Describe what students will learn in this classroom...", 
              class: "w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border-0 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:bg-white dark:focus:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors resize-none" %>
        </div>
        <!-- Action Buttons -->
        <div class="flex space-x-4 mt-8">
          <%= link_to 'CANCEL', @class_room, 
              class: "flex-1 px-6 py-3 bg-gray-200 dark:bg-gray-600 hover:bg-gray-300 dark:hover:bg-gray-500 text-gray-800 dark:text-gray-200 font-medium text-center text-sm uppercase tracking-wide transition-colors" %>
          <%= form.submit "UPDATE CLASSROOM", 
              class: "flex-1 px-6 py-3 bg-indigo-500 hover:bg-indigo-600 text-white font-medium text-sm uppercase tracking-wide transition-colors cursor-pointer border-0" %>
        </div>
      <% end %>
    </div>
    <!-- Back Link -->
    <div class="text-center mt-6">
      <%= link_to @class_room, 
          class: "inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        BACK TO CLASSROOM
      <% end %>
    </div>
  </div>
</div>
