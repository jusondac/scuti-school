<% content_for :title, "Students List" %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Students</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">All registered students in the system (<%= @pagy.count %> total)</p>
    </div>
    <%= link_to users_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700" do %>
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to User Management
    <% end %>
  </div>
  <!-- Search Form -->
  <div class="mb-8">
    <%= search_form_for @q, url: students_users_path, method: :get, class: "bg-white dark:bg-gray-800 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700 p-6" do |f| %>
      <div class="mb-4">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Search Students</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.search_field :email_cont, placeholder: "Search by email...", 
                class: "block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <div class="flex items-center space-x-4">
            <%= f.submit "Search", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Clear", students_users_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @students.each do |student| %>
        <li class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10">
                <div class="h-10 w-10 rounded-full bg-blue-500 flex items-center justify-center">
                  <span class="text-sm font-medium text-white">
                    <%= student.email.first.upcase %>
                  </span>
                </div>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900 dark:text-white">
                  <%= student.email.split('@').first.humanize %>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400">
                  <%= student.email %>
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <div class="text-sm text-gray-500 dark:text-gray-400">
                <div>Enrolled: <%= student.enrolled_classes.count %> classes</div>
                <div>Joined: <%= student.created_at.strftime("%B %d, %Y") %></div>
              </div>
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
                  Student
                </span>
              </div>
            </div>
          </div>
        </li>
      <% end %>
      <% if @students.empty? %>
        <li class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No students</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">No students have registered yet.</p>
        </li>
      <% end %>
    </ul>
  </div>
  <!-- Pagination -->
  <% if @students.any? %>
    <div class="mt-6">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
