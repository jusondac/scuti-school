<% content_for :title, "Teachers List" %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Teachers</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-300">All registered teachers in the system (<%= @teachers.count %> total)</p>
    </div>
    <%= link_to users_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700" do %>
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to User Management
    <% end %>
  </div>
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @teachers.each do |teacher| %>
        <li class="px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10">
                <div class="h-10 w-10 rounded-full bg-purple-500 flex items-center justify-center">
                  <span class="text-sm font-medium text-white">
                    <%= teacher.email.first.upcase %>
                  </span>
                </div>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900 dark:text-white">
                  <%= teacher.email.split('@').first.humanize %>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400">
                  <%= teacher.email %>
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <div class="text-sm text-gray-500 dark:text-gray-400">
                <div>Teaching: <%= teacher.teaching_classes.count %> classes</div>
                <div>Joined: <%= teacher.created_at.strftime("%B %d, %Y") %></div>
              </div>
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200">
                  Teacher
                </span>
              </div>
            </div>
          </div>
        </li>
      <% end %>
      <% if @teachers.empty? %>
        <li class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No teachers</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">No teachers have registered yet.</p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
